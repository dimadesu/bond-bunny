<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.srtla">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <!-- Required on Android 13+ to post notifications (foreground service notification) -->
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">

    <activity
      android:name=".MainActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".AboutActivity"
      android:exported="false"
      android:label="About" />

    <activity
      android:name=".SettingsActivity"
      android:exported="false"
      android:label="Settings" />

    <activity
      android:name=".UrlBuilderActivity"
      android:exported="false"
      android:label="URL Builder" />

    <activity
      android:name=".TestActivity"
      android:exported="false"
      android:label="SRTLA Native Test" />

    <activity
      android:name=".DirectSrtlaTestActivity"
      android:exported="true"
      android:label="Direct SRTLA Test">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".AndroidSrtlaTestActivity"
      android:exported="true"
      android:label="SRTLA Fork Test">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service
      android:name=".EnhancedSrtlaService"
      android:enabled="true"
      android:exported="false"
      android:foregroundServiceType="dataSync" />

    <service
      android:name=".UltraSimpleSrtlaService"
      android:enabled="true"
      android:exported="true"
      android:foregroundServiceType="dataSync" />

    <service
      android:name=".DirectSrtlaTestService"
      android:enabled="true"
      android:exported="false"
      android:foregroundServiceType="dataSync" />

    <service
      android:name=".AndroidSrtlaService"
      android:enabled="true"
      android:exported="false"
      android:foregroundServiceType="dataSync" />
  </application>
</manifest>