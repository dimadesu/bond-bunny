<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Settings"
      android:textStyle="bold"
      android:textSize="18sp"
      android:layout_marginBottom="8dp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Local Listen Port:"
      android:layout_marginBottom="4dp" />

    <EditText
      android:id="@+id/edit_listen_port"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="6000 (SRT client connects here)"
      android:inputType="number"
      android:layout_marginBottom="12dp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="SRTLA Server:"
      android:layout_marginBottom="4dp" />

    <EditText
      android:id="@+id/edit_server_host"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="10.0.0.1"
      android:inputType="text"
      android:layout_marginBottom="12dp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="SRTLA Server Port:"
      android:layout_marginBottom="4dp" />

    <EditText
      android:id="@+id/edit_server_port"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="5000"
      android:inputType="number"
      android:layout_marginBottom="12dp" />

    <!-- Advanced Features Section -->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="âš¡ Connection selection algorithm"
      android:textSize="16sp"
      android:textStyle="bold"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp" />

    <!-- Classic SRTLA Algorithm Toggle -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Classic SRTLA algorithm that matches original srtla_send logic."
        android:textSize="12sp" />

      <Button
        android:id="@+id/button_toggle_classic_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:textSize="12sp"
        android:minWidth="100dp"
      />

    </LinearLayout>

    <!-- Network Priority Toggle -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Wi-Fi > Ethernet > Cellular priority. Additionally, windows above 10k and 20k get extra points."
        android:textSize="12sp" />

      <Button
        android:id="@+id/button_toggle_network_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:textSize="12sp"
        android:minWidth="100dp"
      />

    </LinearLayout>

    <!-- Quality-Based Scoring Toggle -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Punish connections with recent NAKs.\nMore recent = more punishment.\nDouble punishment for NAK burst."
        android:textSize="12sp" />

      <Button
        android:id="@+id/button_toggle_quality_scoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:textSize="12sp"
        android:minWidth="100dp"
      />

    </LinearLayout>

    <!-- Connection Exploration Toggle -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Connection exploration.\n10% of the time pick 2nd best network.\nEvery ~5 seconds explore for ~500ms."
        android:textSize="12sp" />

      <Button
        android:id="@+id/button_toggle_exploration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:textSize="12sp"
        android:minWidth="100dp"
      />

    </LinearLayout>

    <!-- Connection Stickiness Toggle -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="16dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text='Connection "stickiness". Prevent frequent network switches. Use selected network for at least 500ms.'
        android:textSize="12sp" />

      <Button
        android:id="@+id/button_toggle_stickiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:textSize="12sp"
        android:minWidth="100dp"
      />

    </LinearLayout>

  </LinearLayout>

</ScrollView>